# vim: filetype=sh
[user]
	email = esayemm@gmail.com
	name = Sam Lau
[color]
	ui = always
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[core]
  ignorecase = false
	editor = vim
	excludesfile = ~/.gitignore_global
[alias]
	co = checkout
	st = status

	# commit
	c = commit
	ca = commit -am
	cm = !git add -A && git commit -m

  # branch
  b = branch -v

  # log
  l = log --graph --pretty=format:'%Cred%h %Cblue%an:%Creset %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
  log = log --graph --date=short
  fl = log -u

  # add
  a = add

	# push
  ps = push

  # remote
  r = remote -v
	d = difftool

  # wip
  up = !git pull --rebase --prune $@
  save = !git add -A && git commit -m 'SAVEPOINT'
  undo = reset HEAD~1 --mixed
  amend = commit -a --amend
  go = "!f() { git checkout -b \"$1\" 2> /dev/null || git checkout \"$1\"; }; f"

  # clean
  bclean = "!f() { git branch --merged ${1-master} | grep -v " ${1-master}$" | gxargs -r git branch -d; }; f"
  bdone = "!f() { git checkout ${1-master} && git up && git bclean ${1-master}; }; f"

  # show stash, apply stash by name
  sshow = "!f() { git stash show stash^{/$*} -p; }; f"
  sapply = "!f() { git stash apply stash^{/$*}; }; f"

  # ignored
  ignored = !git ls-files -v | grep "^[[:lower:]]"
  untrack = !git update-index --assume-unchanged
  retrack = !git update-index --no-assume-unchanged
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[push]
	default = simple
[credential]
	helper = osxkeychain
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
