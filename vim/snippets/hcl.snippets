snippet var
	variable "${1}" {
		type = ${2}
		description = "${3}"
	}
snippet init
	# ------------------------------------------------
	# Inputs
	# ------------------------------------------------

	${1}

	# ------------------------------------------------
	# Resources
	# ------------------------------------------------



	# ------------------------------------------------
	# Outputs
	# ------------------------------------------------
snippet out
	output "${1}" {
		description = "${2}"
		value       = ${3}
	}
snippet re
	resource "${1}" "${2}" {
		${0}
	}
snippet mod
	module "${1}" {
		source = "${2}"
	}
snippet dep
	dependency "${1}" {
		config_path = "${2}"
	}
snippet tginit
	locals {
		env_vars = read_terragrunt_config(find_in_parent_folders("${1}"))
	}

	include {
		path = find_in_parent_folders()
	}

	inputs = {
		${0}
	}
