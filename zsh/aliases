# vi: ft=zsh

# Always use color output for `ls`
alias ls="exa -l --group-directories-first"
alias l="exa -l --group-directories-first"

# go to project root
alias r='cd $(git rev-parse --show-toplevel)'

alias g='git'

alias vim='nvim'

alias k='kubectl'

alias cat='bat'

alias rg="rg --hidden"

# fd is fdfind in linux `apt install fd-find`
if [[ `uname` == "Linux" ]]; then
  alias fd='fdfind'
fi
