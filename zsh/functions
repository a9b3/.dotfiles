# vim: filetype=zsh

# make dir and enter it
function mkc() {
  mkdir -p "$@" && cd "$@"
}

# compiles java file and runs it
function javarun() {
  file=$1
  suffix=java
  javac ${file}
  java ${file%.$suffix}
  rm ./${file%.$suffix}.class
}

# compiles and runs cpp files
function cpprun() {
  file=$1
  suffix=cpp
  clang++ -std=c++11 -stdlib=libc++ $1 -o ${file%.$suffix}.out
  ./${file%.$suffix}.out
  rm ./${file%.$suffix}.out
}

# compile and run c files
function crun() {
  file=$1
  suffix=c
  gcc ${file} -o ${file}.out
  ./${file}.out
  rm ./${file}.out
}

# tm - create new tmux session, or switch to existing one. Works from within tmux too. (@bag-man)
# `tm` will allow you to select your tmux session via fzf.
# `tm irc` will attach to the irc session (if it exists), else it will create it.

function tm() {
  [[ -n "$TMUX" ]] && change="switch-client" || change="attach-session"

  if [[ "$1" ]]; then
    tmux $change -t "$1" 2>/dev/null || (tmux new-session -d -s $1 && tmux $change -t "$1"); return
  fi
  session=$(tmux list-sessions -F "#{session_name}" 2>/dev/null | fzf --exit-0) &&  tmux $change -t "$session" || echo "No sessions found."
}

# fasd & fzf change directory - jump using `fasd` if given argument, filter output of `fasd` using `fzf` else
function z() {
  local dir
  dir="$(fasd -Rdl "$1" | fzf -1 -0 --no-sort +m)" && cd "${dir}" || return 1
}

# jump to project directories using fzf
function acd() {
  root=$(git rev-parse --show-toplevel)
  folder=$(git ls-files $root --full-name | xargs -n 1 dirname | uniq | fzf --exit-0)
  cd $root/$folder
}

# open vim file using fzf to search within project directory
function v() {
  root=$(git rev-parse --show-toplevel)
  file=$(git ls-files $root --full-name | fzf --exit-0)
  vim $root/$file
}

# mm will bookmark the cwd for later use.
# ex.
# mm a
function mm() {
  if [[ "$1" ]]; then
    echo "$(pwd) > ~/.tmp/mm/$1"
  else
    echo "no marker entered"
    ls ~/.tmp/mm
  fi
}
# use in conjuction with mm to go back to previously bookmarked location
# ex.
# m a
function m() {
  if [[ "$1" ]]; then
    cd $(cat ~/.tmp/mm/$1)
  else
    echo "no marker entered"
    ls ~/.tmp/mm
  fi
}

function replace() {
  if [[ ! -n "$1" ]]; then
    echo "missing first argument"
    return
  fi

  if [[ ! -n "$2" ]]; then
    echo "missing second argument"
    return
  fi

  rg "$1" -l | xargs sed -i '' -e 's/'"$1"'/'"$2"'/g'
}

function landit() {
  if [[ ! -n "$1" ]]; then
    echo "missing first argument"
    return
  fi

  current_branch="$(git rev-parse --abbrev-ref HEAD)"
  commit="$1"

  arc land --keep-branch "$commit"
  git checkout master
  git up
  git checkout "$current_branch"
  git rebase master
}
